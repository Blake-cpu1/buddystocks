  function getApiKey(){ var k=getStoredKey(); if(k) return k; if(isPDA()) return PDA_API_KEY_PLACE; return 'IPUZ58l0f5FzuA8Q'; }
  function uuid(){ return 'l_' + Date.now().toString(36) + Math.random().toString(36).slice(2,8); }

