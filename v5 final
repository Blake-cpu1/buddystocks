    return fetch(url).then(function (r) {
      if (!r.ok) throw new Error('HTTP ' + r.status + ' ' + r.statusText);
      return r.json();
    }).then(function (j) {
      if (j && j.error) throw new Error(j.error.error || 'API Error');
      return j;
    });
  }
