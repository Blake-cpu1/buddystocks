  function fmtMoney(num){
    var sign = num < 0 ? '-' : '';
    var s = String(Math.abs(Math.floor(num)));
    var out = '', i = s.length;
    while (i > 3) { out = ',' + s.slice(i-3, i) + out; i -= 3; }
    out = s.slice(0, i) + out;
    return sign + '$' + out;
  }

